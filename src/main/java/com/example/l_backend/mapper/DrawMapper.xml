<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.l_backend.mapper.DrawMapper">
    <select id="getAllFolders" resultMap="folderVOMap">
        select _id, type, name, create_at, update_at
        from drawing_folder
    </select>

    <select id="getAllFoldersByOwner" resultMap="folderVOMap">
        select
    </select>

    <select id="getFolderById" resultMap="folderVOMap">
        select _id, create_at, name, type, update_at
        from drawing_folder
        where _id = #{id}
    </select>
    <!--根据文件夹名称查询出文件夹的内容-->
    <select id="getFolderByName" resultMap="folderVOMap">
        select _id,
               create_at,
               name,
               type,
               update_at,
               owner_id,
               editor_id,
               u.username uname,
               u.account  uaccount
        from drawing_folder
                 left join user u on u.id = drawing_folder.owner_id
        where name = #{name}
    </select>
    <resultMap type="com.example.l_backend.VO.FolderVO" id="folderVOMap">
        <id column="_id" property="_id"/>
        <result column="type" property="type"/>
        <result column="create_at" property="createAt"/>
        <result column="update_at" property="updateAt"/>
        <result column="name" property="name"/>
        <!-- 一对一对应的类写到association内-->
        <association property="owner" javaType="com.example.l_backend.VO.LeUserVO">
            <id column="owner_id" property="id"/>
            <result column="uname" property="username"/>
            <result column="uaccount" property="account"/>
        </association>
        <association property="editor" javaType="com.example.l_backend.VO.LeUserVO">
            <id column="editor_id" property="id"/>
            <result column="uname" property="username"/>
            <result column="uaccount" property="account"/>
        </association>
    </resultMap>
</mapper>